<% if user_signed_in? %>
  <% provide(:title, 'HOME') %>
  <div id="post-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  <h2>HOME</h2>

  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-7">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="center row">
      <div class="row">
        <%= image_tag("home/opening-image.jpg", data:{bgposition: "center center", bgfit: "cover" , bgrepeat: "no-repeat"}) %>
      </div>
      <div class="signup-signin">
        <div class="col-md-4 col-md-offset-4">
          <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
        </div>
        <div class="col-md-4 col-md-offset-4">
          <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
        </div>
      </div>
    </div>
<% end %>
