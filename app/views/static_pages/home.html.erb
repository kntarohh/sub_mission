<% if user_signed_in? %>
  <div id="post-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>みんなの投稿</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="home-background center row">
      <div class="row">
        <%= image_tag("home/shibuya-crossing.jpg", data:{bgposition: "center center", bgfit: "cover" , bgrepeat: "no-repeat"}) %>
      </div>
      <div class="row signup-signin">
        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
<% end %>
