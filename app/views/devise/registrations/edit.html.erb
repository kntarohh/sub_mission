<% provide(:title, "Edit") %>
<h2>EDIT INFOMATION</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="pull-right">
        <a href="http://gravatar.com/emails">写真変更</a>
      </div>
      <div class="pull-right">
        <%= gravatar_for @user %>
      </div>
    </div>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="col-md-12">
          <%= f.label :姓 %><br />
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <%= f.label :名 %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :self_introduction, autofocus: true, class: 'form-control' %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="col-md-12">
          <%= f.label :パスワードを入力 %> <i>(※必須)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <div class="pull-right">
            <%= link_to "パスワード変更", edit_password_path(current_user)  if current_user.provider.blank? %>
          </div>
          <%= f.submit "変更", class: "col-md-2 col-md-offset-5 btn btn-primary submit" %>
        </div>
      <% end %>


      <div class="col-md-12 cancel_my_account">
        <h2>DELETE MY ACCOUNT</h2>
        <div class="center">
        <%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "col-md-2 col-md-offset-5 btn btn-danger submit" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to "戻る", :back %>
